@model petOwnerOneStopShop.Models.FeedUpdate

@{
    ViewData["Title"] = "CreateUpdate";
    Layout = "~/Views/Shared/_Layout_PetBusiness.cshtml";
}

<h1>Post to News Feed</h1>

<h4>FeedUpdate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsFeedId" />
            <span asp-validation-for="NewsFeedId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to News Feed</a> 
</div>

