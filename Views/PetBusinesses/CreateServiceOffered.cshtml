@model PawentsOneStopShop.Models.ServiceOffered

@{
    ViewData["Title"] = "CreateServiceOffered";
    Layout = "~/Views/Shared/_Layout_PetBusiness.cshtml";
}

<h1>Create Service Offered</h1>

<h4>Service Offered</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateServiceOffered">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetBusinessId" />
            <span asp-validation-for="PetBusinessId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Service" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayServices">Back to Services Offered</a>
</div>

