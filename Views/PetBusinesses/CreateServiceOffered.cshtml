@model petOwnerOneStopShop.Models.ServiceOffered

@{
    ViewData["Title"] = "CreateServiceOffered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateServiceOffered</h1>

<h4>ServiceOffered</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateServiceOffered">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetBusinessId" class="control-label"></label>
                <select asp-for="PetBusinessId" class ="form-control" asp-items="ViewBag.PetBusinessId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayServices">Back to Services Offered</a>
</div>

