@model PawentsOneStopShop.Models.ServiceOffered

@{
    ViewData["Title"] = "DeleteServiceOffered";
    Layout = "~/Views/Shared/_Layout_PetBusiness.cshtml";
}

<h1>Delete Service Offered</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Service Offered</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PetBusiness)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PetBusiness.Id)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Id)
        </dd class>
    </dl>
    
    <form asp-action="DeleteServiceOffered">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="EditServiceOffered" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="DisplayServices">Back to Services Offered</a>
    </form>
</div>
