@model petOwnerOneStopShop.Models.PetProfile

@{
    ViewData["Title"] = "CreatePetProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreatePetProfile</h1>

<h4>PetProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePetProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsMale" class="control-label"></label>
                <select asp-for="IsMale" class="form-control" asp-items="ViewBag.GenderSelection"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsAdopted" class="control-label"></label>
                <select asp-for="IsAdopted" class="form-control" asp-items="ViewBag.AdoptionStatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="PetTypeId" class="control-label"></label>
                <select asp-for="PetTypeId" class ="form-control" asp-items="ViewBag.PetType"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input asp-for="ProfilePicture" class="form-control" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayPetProfiles">Back to Pet Profiles List</a>
</div>

