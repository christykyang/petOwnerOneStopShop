@model PawentsOneStopShop.Models.ViewModelPetProfile

@{
    ViewData["Title"] = "CreatePetProfile";
    Layout = "~/Views/Shared/_Layout_PetOwner.cshtml";
}

<h1>Create Pet Profile</h1>

<h4>Pet Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreatePetProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetOwnerId" />
            <span asp-validation-for="PetOwnerId" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsMale" class="control-label"></label>
                <select asp-for="IsMale" class="form-control" asp-items="ViewBag.GenderSelection"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsAdopted" class="control-label"></label>
                <select asp-for="IsAdopted" class="form-control" asp-items="ViewBag.AdoptionStatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="PetTypeId" class="control-label"></label>
                <select asp-for="PetTypeId" class="form-control" asp-items="ViewBag.PetType"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                    @*<input type="file" name="ImageFile" />*@
                </div>
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayPetProfiles">Back to Pet Profiles List</a>
</div>

@section scripts{
    <script type="text/javascript">
// Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });</script>
}

