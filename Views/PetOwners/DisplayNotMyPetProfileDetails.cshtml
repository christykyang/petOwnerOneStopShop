@model PawentsOneStopShop.Models.ViewModelPetProfile

@{
    ViewData["Title"] = "DisplayPetProfileDetails";
    Layout = "~/Views/Shared/_Layout_PetOwner.cshtml";
}

<div>
    <h4>Pet Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsMale)
        </dt>
        @if (Model.IsMale)
        {
            switch (Model.IsMale)
            {
                case false:
                    <dt class="col-sm-10">
                        Female
                    </dt>
                    break;
                case true:
                    <dt class="col-sm-10">
                        Male
                    </dt>
                    break;
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAdopted)
        </dt>
        @if (Model.IsMale)
        {
            switch (Model.IsAdopted)
            {
                case false:
                    <dt class="col-sm-10">
                        Avaliable
                    </dt>
                    break;
                case true:
                    <dt class="col-sm-10">
                        Adopted
                    </dt>
                    break;
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PetType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PetType.TypeName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="CreateAdoption" asp-route-petprofileid="@Model.PetProfileId" >Apply to Adopt</a> |
    <a asp-action="SendPlaydate" asp-route-thatPetOwnerId="@Model.PetOwnerId" >Send Play-date Invitation</a> |
    <a asp-action="SearchPetProfiles">Return to Search Pets</a>
</div>
