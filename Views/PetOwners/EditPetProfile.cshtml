@model PawentsOneStopShop.Models.PetProfile

@{
    ViewData["Title"] = "EditPetProfile";
    Layout = "~/Views/Shared/_Layout_PetOwner.cshtml";
}

<h1>Edit Pet Profile</h1>

<h4>Pet Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPetProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PetOwnerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" value="@Model.Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetTypeId" class="control-label"></label>
                <select asp-for="PetTypeId" class="form-control" asp-items="ViewBag.PetType"></select>
                <span asp-validation-for="PetTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsMale" class="control-label"></label>
                <select asp-for="IsMale" class="form-control" asp-items="ViewBag.GenderSelection"></select>
                <span asp-validation-for="IsMale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAdopted" class="control-label"></label>
                <select asp-for="IsAdopted" class="form-control" asp-items="ViewBag.AdoptionStatus"></select>
                <span asp-validation-for="IsAdopted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DisplayPetProfiles">Back to My Pets</a> |
    <a asp-action="DeletePetProfile" asp-route-id="@Model.Id">Delete</a>
</div>

