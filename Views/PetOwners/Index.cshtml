@model IEnumerable<PawentsOneStopShop.Models.FeedUpdate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_PetOwner.cshtml";
}

<h1>News Feed</h1>

<p>
    <a asp-action="SearchPetProfiles" >Look for Other Pets</a> |
    <a asp-action="SearchPetBusinesses" >Look for Pet Businesses</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PubDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetBusiness.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PubDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetBusiness.Name)
            </td>
            <td>
                <a asp-action="PetBusinessNewsFeed" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
